<html>
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap-grid.min.css" rel="stylesheet">
        <title>{{ name }}</title>
        <style>
            .gallery-image-tab {
                text-align: center;
                max-width: 100%;
                max-height: 100%;
                overflow: auto;
            }
            .gallery-image {
                max-width: 50%;
                max-height: 70%;
            }
        </style>
    </head>
    <body>
        <h1>{{data.name}}</h1>
        <h3>CV: {{data.cv}}</h3>
        <nav>
        <ul class="nav nav-tabs" role="tablist">
            {% for title, url in images.items() %}
            <li class="nav-item" role="presentation">
                <a 
                    class="nav-link active"
                    href="#" 
                    id="tab-{{title}}"
                    data-toggle="tab"
                    role="tab"
                    aria-controls="content-{{title}}"
                    aria-selected="true"
                    >{{ title }}</a>
            </li>
            {% endfor %}
        </ul>
        </nav>
        <div class="tab-content">
            {% for title, url in images.items() %}
            <div class="tab-pane fade gallery-image-tab" role="tabpanel" aria-labelledby="tab-{{title}}" id="content-{{title}}">
                <a class="nav-link active" href="#">{{ title }}</a>
                <img class="gallery-image" src="{{ url }}"/>
            </div>
            {% endfor %}
        </div>
        {% for title, url in files.items() %}
        <audio src="{{ url }}" controls></audio>
        {% endfor %}


        <script src="https://cdn.bootcdn.net/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
    </body>
</html>